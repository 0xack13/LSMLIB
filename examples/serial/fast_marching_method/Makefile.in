BUILD_DIR = @top_builddir@
include $(BUILD_DIR)/config/Makefile.config

LIB_DIRS     = -L$(LSMLIB_LIB_DIR)

PROGS        = test_computeDistanceFunction2d        \
               test_computeExtensionFields2d         \
               test_computeDistanceFunction3d        \
               test_solveEikonalEquation2d           \

all:  $(PROGS)

test_computeDistanceFunction2d: test_computeDistanceFunction2d.o
	@CC@ @CFLAGS@ $(LIB_DIRS) $< $(LSMLIB_LIBS) -o $@

test_computeExtensionFields2d: test_computeExtensionFields2d.o
	@CC@ @CFLAGS@ $(LIB_DIRS) $< $(LSMLIB_LIBS) -o $@

test_computeDistanceFunction3d: test_computeDistanceFunction3d.o
	@CC@ @CFLAGS@ $(LIB_DIRS) $< $(LSMLIB_LIBS) -o $@

test_solveEikonalEquation2d: test_solveEikonalEquation2d.o
	@CC@ @CFLAGS@ $(LIB_DIRS) $< $(LSMLIB_LIBS) -o $@

clean:
	@RM@ *.o 
	@RM@ *.dat
	@RM@ $(PROGS)
		
spotless:  clean
	@RM@ *.log
