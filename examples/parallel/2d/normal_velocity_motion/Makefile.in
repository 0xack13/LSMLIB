BUILD_DIR = @top_builddir@

# configuration for SAMRAI library
include @samrai_inc@/../config/Makefile.config

# NOTE:  LSMLIB's Makefile.config MUST be included last because it
#        redefines the pattern rules for compiling source code
include $(BUILD_DIR)/config/Makefile.config

# Set MAKE
@SET_MAKE@

CPPFLAGS_EXTRA = -I$(FORTRAN)

all: NormalVelocityMotion2d_main

NormalVelocityMotion2d_main:                                         \
		NormalVelocityMotion2d_main.o                        \
		NormalVelocityMotion2d_VelocityFieldModule.o         \
		NormalVelocityMotion2d_PatchModule.o                 \
                normal_velocity_motion2d_patchmodule_fort.o            \
                normal_velocity_motion2d_normalvelocityfield_fort.o
	$(CXX) @CXXFLAGS@ $(CXXFLAGS) $(LDFLAGS) -L$(LSMLIB_LIB_DIR) $^    \
        $(LSMLIB_LIBS) $(LDLIBS_EXTRA)                                     \
        $(LIBSAMRAI3D) $(LIBSAMRAI2D) $(LIBSAMRAI1D) $(LIBSAMRAI)          \
        $(LDLIBS) -o NormalVelocityMotion2d_main
     
clean:
		@RM@ NormalVelocityMotion2d_main
		@RM@ *.o core 
		@RM@ PI*

cleanrun:
		@RM@ PI*
		@RM@ *.log
		@RM@ *.log.*
		@RM@ -r *.visit
		@RM@ -r *.restart

spotless:	clean cleanrun

include Makefile.depend

FORTRAN = fortran

normal_velocity_motion2d_patchmodule_fort.o: $(FORTRAN)/normal_velocity_motion2d_patchmodule_fort.f
	@F77@ @FFLAGS@ $(FFLAGS) $(FFLAGS_EXTRA) -c $^ 

normal_velocity_motion2d_normalvelocityfield_fort.o:                \
  $(FORTRAN)/normal_velocity_motion2d_normalvelocityfield_fort.f
	@F77@ @FFLAGS@ $(FFLAGS) $(FFLAGS_EXTRA) -c $^ 

